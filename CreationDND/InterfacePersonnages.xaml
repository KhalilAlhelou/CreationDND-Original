<Window x:Class="CreationDND.Personnages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreationDND"
        mc:Ignorable="d"
        Title="Personnages" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" RenderTransformOrigin="0.489,0.49">
            <DockPanel Height="433">
                <ComboBox x:Name="ComboBoxPersonnages" SelectionChanged="comboBox_AfficherPersonnage" DockPanel.Dock="Bottom" Height="49" Width="302" Margin="0,100,0,0" ItemsSource="{Binding listeRaces}"/>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="0,0,0,10">

            <DockPanel Height="430" Width="396">
                <Button x:Name="choisirPersonnageSelectionnee" Height="60" Width="160" Content="Choisir personnage" Margin="0,100,0,0"/>
            </DockPanel>

        </StackPanel>

    </Grid>
    
   
</Window>
